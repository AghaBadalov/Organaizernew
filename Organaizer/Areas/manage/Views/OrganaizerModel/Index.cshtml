@using OrganaizerShop.Models
@model PaginatedList<OrganaizerModel>
@{
    int counter = ((Model.ActivePage - 1) * 6);
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Organaizerlər</h6>
        <div class="table-responsive">
            <a asp-action="create" asp-controller="organaizermodel" class="btn btn-outline-primary m-2">Yarat</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Adı</th>
                        <th scope="col">Qiyməti</th>
                        <th scope="col">Sayı</th>
                        <th scope="col">Qapaq Şəkli</th>
                        <th scope="col">Fəaliyyətlər</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OrganaizerModel org in Model)
                    {
                        counter++;
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@org.Name</td>
                            <td>@org.Price</td>
                            <td>@org.Count</td>
                            <td>
                                <div><img style="max-width:100px" src="~/uploads/organaizers/@org.OrganaizerImages.FirstOrDefault(x=>x.IsPoster==true).ImageUrl" alt=" "></div>
                            </td>
                            <td>
                                <a asp-action="update" asp-controller="organaizermodel" asp-route-id="@org.Id" class="btn btn-warning m-2">Yenilə</a>

                                <a asp-action="deactive" asp-controller="organaizermodel" asp-route-id="@org.Id" class="btn btn-danger m-2">Deaktiv Et</a>
                                <a asp-action="details" asp-controller="organaizermodel" asp-route-id="@org.Id" class="btn btn-info m-2">Ətraflı</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<div style="margin-left:500px">
    <form>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPrevious)
                {
                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage-1)">Previous</a></li>
                }
                @for (int i = 1; i <= Model.TotalPageCount; i++)
                {
                    <li class="page-item @((Model.ActivePage==i)? "active" : "")"><a class="page-link" asp-route-page="@i">@i</a></li>
                }

                @if (Model.HAsNext)
                {
                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(Model.ActivePage+1)">Next</a></li>
                }
            </ul>
        </nav>
    </form>
</div>


