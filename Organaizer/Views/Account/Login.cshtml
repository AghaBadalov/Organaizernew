@using Organaizer.ViewModels
@model UserLoginVM
<div style="width:100%;margin-left:auto; margin-right:auto;margin-top:50px; margin-bottom:60px" class="col-md-12  ">

    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <form method="post" >
            

            <!-- Email input -->
            <div class="d-flex justify-content-center" style="margin-top:100px" ><p>Hesabınıza Daxil Olun</p></div>
            
            <div class="form-outline mb-4">
                <label asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" placeholder="Email  ">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password">Şifrə</label>
                <input class="form-control" asp-for="Password" placeholder="Şifrə" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly"></div>

            <!-- 2 column grid layout -->
            <div class="text-center">
                

                <div class="col-md-12 d-flex justify-content-center">
                    <!-- Simple link -->
                    <a asp-action="forgotpassword" asp-controller="account">Parolu Unutdun?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Daxil Ol</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Hesabın yoxdur? <a asp-action="register" asp-controller="account">Qeydiyyatdan keç</a></p>
            </div>
        </form>
    </div>
</div>
  
