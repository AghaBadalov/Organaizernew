@using Organaizer.ViewModels
@model UserRegisterVM

<div style="width:100%;margin-left:auto; margin-right:auto;margin-top:50px; margin-bottom:60px" class="col-md-12  ">

    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <form method="post">


            <!-- Email input -->
            <div class="d-flex justify-content-center"><p> Qeydiyyatdan keçin</p></div>

            

            <!-- Password input -->
            <div class="form-outline mb-4" >
                <label  asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" placeholder="Email  ">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
             <label asp-for="Password">Şifrə</label>
                <input class="form-control" asp-for="Password" placeholder="Şifrə " required>
             <span asp-validation-for="Password" class="text-danger"></span>
             </div>
             <div class="form-group">
                <label asp-for="CheckPass">Şifrənin təkrarı</label>
                <input class="form-control" asp-for="CheckPass" placeholder="Şifrənin təkrarı " required>
             <span asp-validation-for="CheckPass" class="text-danger"></span>
             </div>
             <div asp-validation-summary="ModelOnly"></div>
            

            

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Qeydiyyatdan keç</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Artıq  Hesabın var? <a asp-action="login" asp-controller="account">Giriş et</a></p>
            </div>
        </form>
    </div>
</div>

