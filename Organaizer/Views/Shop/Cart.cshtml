@using Organaizer.ViewModels

@model CartViewModel
	<div style="">
		<div class="container">
			<div >
				<div class="col-md-9 ftco-animate text-center">
					<p class="breadcrumbs"><span class="mr-2"><a asp-action="index" asp-controller="home">Home</a></span> <span>Cart</span></p>
					<h1 class="mb-0 bread">Səbətim</h1>
				</div>
			</div>
		</div>
	</div>

	<section class="ftco-section ftco-cart">
		<div class="container">
			<div class="row justify-content-start">
			<div class=" col-lg-12 col-md-6 mt-5 cart-wrap ftco-animate">
					<div class="cart-list" style="overflow:hidden;">
						<table class="table">
							
							<tbody>
								@foreach (var item in Model.BasketItems)
							{
								<div class="card mb-3" style="max-width: 540px;">
									<div class="row g-0">
										<div class="col-md-4">
											<img src="~/uploads/organaizers/@item.ImageUrl" class="img-fluid rounded-start" alt="...">
										</div>
										<div class="col-md-8">
											<div class="card-body">
												<h5 class="card-title">@item.ProductName</h5>
												<p class="card-text">Rəng: @item.Color</p>
												<p class="card-text">
												 Qiymət:      <span style="text-decoration: line-through;margin-left:5px;margin-right:7px;  ">@item.Price AZN     </span>      @item.ProductPrice AZN
												</p>												



												<p class="card-text">Endirim: @item.Discount %</p>

												<p class="card-text">Say: @item.ProductCount ədəd</p>
												<p class="card-text">
													Ümumi Qiymət:      <span style="text-decoration: line-through;margin-left:5px;margin-right:7px;">@item.TotalPrice AZN</span>@item.ProductTotal AZN
												</p>
											</div>
										</div>
									</div>
								</div>
							}

								
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<div class="row justify-content-start">
				<div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Ümumi  Səbət</h3>
				
						
					<p class="card-text">
					Qiymət:<span style="text-decoration: line-through;margin-left:50px;margin-right:7px;">@Model.LTotal AZN</span>@Model.Total AZN
					</p>
					</div>
					<p class="text-center"><a href="checkout.html" class="btn btn-primary py-3 px-4">Proceed to Checkout</a></p>
			</div>
			</div>
		</div>
	</section>


	